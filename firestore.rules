rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check the role of the requesting user.
    function isRequestingUserRole(role) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // READ: Allow a user to read their own document. Admins can read any user document.
      // Doctors can also list users for their dashboard.
      allow read, list: if request.auth != null && (
            request.auth.uid == userId || 
            isRequestingUserRole('admin') || 
            isRequestingUserRole('doctor')
      );
      
      // CREATE: Allow a user to create their own user document or a doctor to create a patient document.
      allow create: if request.auth != null && (request.auth.uid == userId || isRequestingUserRole('doctor'));

      // UPDATE: Allow user to update their own doc (but not their role), or allow an admin or a doctor to update anything.
      allow update: if request.auth != null && (
        (request.auth.uid == userId && request.resource.data.role == resource.data.role) ||
        isRequestingUserRole('admin') || isRequestingUserRole('doctor')
      );

      // DELETE: Not allowing deletes for now.
      allow delete: if false;

      // Specific rule for health_tracking to allow patient writes
      match /health_tracking/{trackingId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Specific rule for audit_trail
      match /audit_trail/{logId} {
        allow read: if request.auth != null && (
          request.auth.uid == userId || 
          isRequestingUserRole('admin') || 
          isRequestingUserRole('doctor')
        );
        allow write: if request.auth != null && (isRequestingUserRole('admin') || isRequestingUserRole('doctor'));
      }

      // Rules for patient data subcollections
      match /{subcollection}/{docId} {
        // READ: 
        // 1. A user can read their OWN subcollections (e.g., a patient reading their own prescriptions).
        // 2. Admins and Doctors can read ANY user's subcollections.
        allow read: if request.auth != null && (
          request.auth.uid == userId || 
          isRequestingUserRole('admin') || 
          isRequestingUserRole('doctor')
        );

        // WRITE:
        // Only allow doctors and admins to write to any subcollection (prescriptions, blood_pressure).
        allow write: if request.auth != null && (isRequestingUserRole('admin') || isRequestingUserRole('doctor'));
      }
    }

    // Rules for the 'medications' collection
    match /medications/{medId} {
        // READ: Any authenticated user can read the medication list.
        allow read: if request.auth != null;
        // WRITE (create, update, delete): Only admins or doctors can manage medications.
        allow write: if request.auth != null && (isRequestingUserRole('admin') || isRequestingUserRole('doctor'));
    }
  }
}